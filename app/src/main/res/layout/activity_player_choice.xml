<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vova.diarchyofthewalls.activity.PlayerChoiceActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:text="@string/player1Bt"
        android:id="@+id/player1Bt"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/player2Bt"
        android:id="@+id/player2Bt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:text="@string/player3Bt"
        android:id="@+id/player3Bt"
        />

</RelativeLayout>
